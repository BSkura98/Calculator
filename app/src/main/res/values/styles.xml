<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FunctionalButtons">
        <item name="android:textColor">@color/colorFunctionalButtonText</item>
        <item name="android:background">@drawable/functional_button_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="NumberButtons">
        <item name="android:textColor">@color/colorNumberButtonText</item>
        <item name="android:background">@drawable/number_button_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">60dp</item>
    </style>

    <style name="EqualButtons">
        <item name="android:textColor">@color/colorEqualButtonText</item>
        <item name="android:background">@drawable/equal_button_shape</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minHeight">60dp</item>
    </style>

</resources>
